generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

model Thread {
  id        Int      @id @default(autoincrement())
  title     String
  desc      String
  category  String
  createdAt DateTime @default(now())
  replies   Reply[]
}

model Reply {
  id        Int      @id @default(autoincrement())
  author    String
  content   String
  createdAt DateTime @default(now())
  threadId  Int
  thread    Thread   @relation(fields: [threadId], references: [id])
}
